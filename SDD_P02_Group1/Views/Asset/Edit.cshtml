<script type="text/javascript">
    function changeToEdit() {

        document.getElementById("change2").readOnly = false;
        document.getElementById("change2").className = "form-control";
        document.getElementById("change3").readOnly = false;
        document.getElementById("change3").className = "form-control";
        document.getElementById("change5").readOnly = false;
