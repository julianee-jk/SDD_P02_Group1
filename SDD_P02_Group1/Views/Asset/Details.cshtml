@model SDD_P02_Group1.Models.Asset

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Asset Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AssetName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssetName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InitialValue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InitialValue)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CurrentValue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CurrentValue)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PredictedValue)
        </dt>
        @if (ViewData.ContainsKey("pvalue"))
        {
            <dd class="col-sm-10">
                @ViewData["pvalue"]
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PredictedValue)
            </dd>
        }

    </dl>
</div>