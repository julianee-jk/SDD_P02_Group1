@model SDD_P02_Group1.Models.UserCard

@{
    ViewData["Title"] = "Delete";
}

<h4>Delete Card Record</h4>
<hr />
<form asp-action="Delete" asp-controller="UserCard">
    <fieldset class="FormContent">
        <legend class="font-weight-bold">Are you sure to delete this record?</legend>
        <p style="color: red">All spending records for this card will also be deleted!</p>
        <div class="form-group row" style="margin-top:1em;">
            <label asp-for="CardID" class="col-sm-3 col-form-label font-weight-bold"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="CardID" readonly class="form-control-plaintext" />
            </div>
        </div>

        <input asp-for="UserID" type="hidden" class="form-control-plaintext" />

        <div class="form-group row">
            <label asp-for="CardName" class="col-sm-3 col-form-label font-weight-bold"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="CardName" readonly class="form-control-plaintext" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="CardType" class="col-sm-3 col-form-label font-weight-bold"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="CardType" readonly class="form-control-plaintext" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="CardDesc" class="col-sm-3 col-form-label font-weight-bold"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="CardDesc" readonly class="form-control-plaintext" />
            </div>
        </div>

        <div class="form-group row">
            <div style="margin-left:1em; margin-top:1.5em;">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </fieldset>
</form>