@model SDD_P02_Group1.Models.UserCard

@{
    ViewData["Title"] = "Create";
}

<h4 class="font-weight-bold text-center" style="margin:2em">Add Card</h4>
<div class="row justify-content-md-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CardName" class="control-label"></label>
                <input asp-for="CardName" class="form-control" />
                <span asp-validation-for="CardName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardType" class="control-label"></label>
                <select asp-for="CardType" 
                        asp-items="@ViewData["CardType"] as List<SelectListItem>" 
                        class="form-control">
                </select>
                <span asp-validation-for="CardType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardDesc" class="control-label"></label>
                <input asp-for="CardDesc" class="form-control" />
                <span asp-validation-for="CardDesc" class="text-danger"></span>
            </div>
            <div class="form-group text-center" style="margin-top: 2rem">
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Go Back</a>&nbsp;
                <input type="submit" value="Add Card" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
