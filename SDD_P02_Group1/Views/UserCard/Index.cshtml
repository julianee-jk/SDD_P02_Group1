@model IEnumerable<SDD_P02_Group1.Models.UserCard>

@{
    ViewData["Title"] = "Cards";
}

<h2 style="margin-top: 2em;"><span style="color: #7f218a;">Credit Cards</span></h2>

<p>
    <a asp-controller="UserCard" asp-action="Create">Add New Card</a>
</p>
<table>
    <thead>
        <tr>
            <th>Card Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.CardName
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="UserCard"
                       asp-route-id="@item.CardID" style="padding-left: 1em;">Details</a> |

                    <form asp-action="Delete" asp-controller="UserCard" asp-route-id="@item.CardID" enctype="multipart/form-data" class="form-check-inline" id="assetDeleteForm">
                        <a href="#" data-toggle="modal" data-target="#deleteAssetConfirmation">Delete</a>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>