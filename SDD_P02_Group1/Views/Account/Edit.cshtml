@model SDD_P02_Group1.ViewModels.EditUserViewModel


@{
    ViewData["Title"] = "Edit";
}


<div class="col-md-4">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Username" class="control-label"></label><br />
            <input asp-for="Username" class="form-control-plaintext"/>
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" class="form-control-plaintext"/>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EmailAddr" class="control-label"></label>
            <input asp-for="EmailAddr" class="form-control-plaintext"/>
            <span asp-validation-for="EmailAddr" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary col-sm-4"/>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to Profile</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
